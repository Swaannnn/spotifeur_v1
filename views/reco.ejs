                <p id="genre"></p>
                <!-- <br> -->
                <button class="btnYouTube">&nbsp;</button>
            </div>
            <div class="image">
                <img id="image" src="" width="200" height="200">
            </div>
            <div class="arrows">
                <img id="leftArrow" src="img/arrow.png" style="transform: rotate(180deg);" width="30px" height="30px">
                <img id="rightArrow" src="img/arrow.png" width="30px" height="30px">
            </div>
        </div>

    </section>

    <script>
        var accessToken = "<%= accessToken %>"
        var cleApiYoutube = "<%= cleApiYoutube %>"
    </script>
